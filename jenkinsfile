pipeline {
    environment {
        registry = "madgraycat"
        prod = "192.168.233.132"
    }
    agent {
        docker {
            image 'madgraycat/builder:latest'
            registryCredentialsId 'dockerhub'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage ('git clone') {
            steps {
                git 'https://github.com/boxfuse/boxfuse-sample-java-war-hello.git'
            }
        }
        stage ('Build') {
            steps {
                sh 'mvn clean package'
                sh 'cp ./target/hello-1.0.war .'
                
            }
        }
        stage ('docker image') {
            steps {
                
                git 'https://github.com/madgraycat/jenkins_ex_new.git'
                sh 'ls'
                script {
                    def image=docker.build("${env.registry}/my_app:latest")
                    image.push()
                }
                
            }
        }
        stage('Run on prod'){
            steps {
                sshagent(['prod']) {
                    sh 'docker run -d $registry/my_app:latest'
                }
            }
        }
    }
}
